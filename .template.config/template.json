{
    "$schema": "http://json.schemastore.org/template",
    "author": "ASIM GUNDUZ",
    "classifications": [ "MagicOnion", "MagicOnion Generic", "MagicOnion Generic Template", "C#", "Template" ],
    "tags": {
        "language": "C#",
        "type": "solution"
    },
    "identity": "MagicOnionGenericTemplate",
    "name": "Magic Onion Generic Template",
    "shortName": "magic-onion-generic",
    "sourceName": "MagicT",
    "preferNameDirlectory": true,
    "symbols": {
        "Framework": {
            "type": "parameter",
            "description": "The target framework for the project.",
            "replaces": "{framework}",
            "defaultValue": "net7.0",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "net7.0"
                },
                {
                    "choice": "net8.0"
                }

            ]
        },
        "SSL_CONFIG": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "true",
            "description": "Configures GRPC connections with SSL"
        },
        "Docker": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Configures Endpoints,Database and Redis Connections"
        }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "exclude": [
                        ".vs/**",
                        ".template_config/**",
                        "MagicT.Server/ZoneTree/Database/**",
                        "README.md",
                        ".DS_Store",
                        ".gitignore",
                        ".git/**",
                        ".idea/**",
                        ".vscode/**",
                        "bin/**",
                        ".obj/**",
                        "MagicT.Server/Migrations/**",
                        "nuget.csproj",
                        "MagicOnionGenericTemplate.*.nupkg"
                    ]
                } 
            ]
        }
    ]
}
