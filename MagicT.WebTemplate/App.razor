@using Microsoft.AspNetCore.Components.Routing

 

<CascadingValue Name="LoginData" Value="@LoginManager.LoginData">
    <CascadingValue Name="@(nameof(LoginManager.ClientShared))" Value="@LoginManager.ClientShared">
        <CascadingValue Name="@(nameof(SignOutFunc))" Value="@SignOutFunc">
            <Router AppAssembly="@typeof(App).Assembly">
                <Found Context="routeData">

                    @{
                        if (IsLoaded)
                        {
                            <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
                            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
                        }
                    }

                </Found>
                <NotFound>
                    <LayoutView Layout="@typeof(MainLayout)">
                        <NotFound />
                    </LayoutView>
                </NotFound>
            </Router>
        </CascadingValue>
    </CascadingValue>
</CascadingValue>