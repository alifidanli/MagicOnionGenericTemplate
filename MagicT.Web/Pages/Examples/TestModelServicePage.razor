@page "/TestModelServicePage"

@inherits ServicePageBase<TestModel, ITestService>


<MudButton OnClick="FailAdd">FailAdd</MudButton>

<GenGrid DataSource="DataSource"
         TModel="TestModel"
         EditMode="EditMode.Form"
         Title="TestModel Page"
         Create="CreateAsync"
         Update="UpdateAsync"
         Delete="DeleteAsync"
         Search="ReadAsync">
    <GenColumns>
        <GenTextField Label="Description" BindingField="@(nameof(TestModel.Description))" />
        <GenFileUpload BindingField="@(nameof(TestModel.Description))"
        Label="Test" Color="Color.Primary"
        Variant="Variant.Filled"
        FilesChanged="OnFileUpload" xs="12" sm="12" lg="12" md="12" xl="12" xxl="12" />
    </GenColumns>
</GenGrid>