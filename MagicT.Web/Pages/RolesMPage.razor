@page "/Roles"

@inherits ServicePageBase<ROLES_M, IRolesMService>


<GenGrid DataSource="@DataSource" TModel="ROLES_M"
         EditMode="EditMode.SmartForm"
         MaxWidth="MaxWidth.Large"
         Create="Create"
         Update="Update"
         Delete="Delete"
         Cancel="Cancel"
         Load="Load"
         Title="Roles"
         FixedFooter="true"
         Height="500">
    <GenColumns>

        <GenTextField @ref="AB_NAME"
                      BindingField="@nameof(ROLES_M.AB_NAME)"
                      xs="12" sm="12" md="12" lg="9" xl="9" xxl="9"
                      Label="Role Name" />

        <GenSpacer   xs="12" sm="12" md="12" lg="1" xl="1" xxl="1" />

        <GenTextField BindingField="@nameof(ROLES_M.AB_AUTH_TYPE)"
                      xs="12" sm="12" md="12" lg="2" xl="2" xxl="2"
                      EditorEnabled="false" Label="Role Type" />


    </GenColumns>
    <GenDetailGrid>
        <MudTabs Class="mt-5" Style="width:100%!important" Color="Color.Primary">
            <MudTabPanel Text="Role Details">
                 <RolesDPage ParentModel="context" />
            </MudTabPanel>
        </MudTabs>
    </GenDetailGrid>
</GenGrid>

 